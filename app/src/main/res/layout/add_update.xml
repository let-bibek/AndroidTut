<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="10dp"
    android:background="#25FD1921"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/tvEditAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Place"
        android:textSize="30sp"
        android:textColor="#FF0026"
        />

    <EditText
        android:id="@+id/etEditAddPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:background="@color/white"
        android:ems="14"
        android:hint="Place name"
        android:minHeight="48dp"
        android:padding="10sp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etEditAddLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:background="@color/white"
        android:ems="14"
        android:hint="Location"
        android:minHeight="48dp"
        android:padding="10sp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etEditAddDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:background="@color/white"
        android:ems="14"
        android:hint="Place short description(Optional)"
        android:minHeight="48dp"
        android:padding="10sp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnAddUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:backgroundTint="@color/md_red_700"
        />
</LinearLayout>